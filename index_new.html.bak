        </div>
        <div class="loading-tips">
          <p>‚ú® Preparing fireflies and magical creatures</p>
        </div>
      </div>
    </div>

    <!-- Main Canvas -->
    <canvas id="three-canvas"></canvas>

    <!-- End Video (Hidden Initially) -->
    <video id="end-video" muted playsinline preload="metadata" style="display: none;">
      <source src="./assets/endvideo.mp4" type="video/mp4">
      Your browser does not support the video tag.
    </video>

    <!-- Scroll Content -->
    <div class="scroll-content">
      <section class="section forest-section">
